@model IEnumerable<eShop.Models.LoaiSanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var num = 1;
}

<div class="card">
    <div class="card-body">
        <h4>Quản lý loại sản phẩm</h4>
        <div class="m-t-25">
            <table id="data-table" class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @num
                            </td>
                            <td>
                                @item.TenLoaiSanPham
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.MaLoaiSanPham">
                                    <button class="btn btn-icon btn-info" title="Chi tiết">
                                        <i class="anticon anticon-info"></i>
                                    </button>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MaLoaiSanPham">
                                    <button class="btn btn-icon btn-danger" title="Xóa">
                                        <i class="anticon anticon-delete"></i>
                                    </button>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.MaLoaiSanPham">
                                    <button class="btn btn-icon btn-primary" title="Cập nhật">
                                        <i class="anticon anticon-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                        num++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
